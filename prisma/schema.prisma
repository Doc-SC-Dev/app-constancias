model ParticipantType {
  id             String        @id @default(uuid())
  name           String
  activityType   ActivityType? @relation(fields: [activityTypeId], references: [id])
  activityTypeId String?
  participants   Participant[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @default(now()) @updatedAt

  @@map("participant_type")
}

model Participant {
  id                String          @id @default(uuid())
  activityId        String
  userId            String
  type              ParticipantType @relation(fields: [participantTypeId], references: [id])
  hours             Int
  startAt           DateTime?
  endAt             DateTime?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @default(now()) @updatedAt
  activity          Activity        @relation(fields: [activityId], references: [id], onDelete: Cascade)
  user              User            @relation(fields: [userId], references: [id])
  participantTypeId String

  @@map("participant")
}

model Certificate {
  id        String    @id @default(uuid())
  pdfLink   String
  name      String    @unique
  requests  Request[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  @@map("certificate")
}

enum RequestState {
  PENDING
  REJECTED
  APPROVED
  CANCELED
  READY
}

model Request {
  id             String        @id @default(uuid())
  userId         String
  certificateId  String
  state          RequestState
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @default(now()) @updatedAt
  user           User          @relation(fields: [userId], references: [id])
  certificate    Certificate   @relation(fields: [certificateId], references: [id])
  activityId     String?
  activity       Activity?     @relation(fields: [activityId], references: [id])
  otherRequestId String?
  otherRequest   OtherRequest? @relation(fields: [otherRequestId], references: [id])

  @@map("request")
}

enum Action {
  CREATE
  UPDATE
  READ
  DELETE
  LIST
}

enum Resource {
  USER
  REQUEST
  ACTIVITY
  CERTIFICATE
  PROFESSOR
  STUDENT
  PARTICIPANT
}

model Log {
  id        String   @id @default(uuid())
  userId    String
  action    Action
  resource  Resource
  result    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("log")
}
